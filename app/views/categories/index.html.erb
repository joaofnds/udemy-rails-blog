<h1 align="center">All categories</h1>

<% @categories.each do |category| %>
	<ul class="listing">
		<div class="row">
			<div class="well col-md-6 col-md-offset-3 user-card">
				<li class="article-title">
					<%= link_to "#{category.name}", category_path(category) %>
				</li>
			</div>
		</div>
	</ul>
<% end %>
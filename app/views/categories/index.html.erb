<h1 align="center">All categories</h1>

<div align="center">
	<%= will_paginate @categories %>
</div>

<% @categories.sort_by{|c| - c.name}.each do |category| %>
	<ul class="listing" align="center">
		<div class="row">
			<div class="well col-md-6 col-md-offset-3 user-card">
				<li class="article-title">
					<%= link_to "#{category.name}", category_path(category) %>
					<li><small><%= pluralize(category.articles.count, "article") if category.articles %></small></li>
					<% if current_user.admin? %>
						<%= link_to "Edit", edit_category_path(category), class: "btn btn-primary btn-xs" %>
						<%= link_to "Delete", category_path(category),
							method: :delete,
							class: "btn btn-danger btn-xs",
							data: { confirm: "Are you sure you want to delete this category?" }
						%>
					<% end %>
			</div>
		</div>
	</ul>
<% end %>

<div align="center">
	<%= will_paginate @categories %>
</div>

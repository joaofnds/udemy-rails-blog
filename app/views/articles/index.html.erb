<h1>index.html.erb</h1>

<p><%= link_to "Create New Article", new_article_path %></p>

<h3>Articles:</h3>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
	</tr>
	<% @articles.each do |a| %>
		<tr>
			<td>
				<%= a.title %>
			</td>
			<td>
				<%= a.description %>
			</td>
			<td>
				<%= link_to 'Edit', edit_article_path(a) %>
			</td>
			<td>
				<%= link_to 'Show', article_path(a) %>
			</td>
		</tr>
	<% end %>
</table>

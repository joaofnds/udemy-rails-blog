<h1 align="center"><%= @user.username %>'s profile</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for @user, size: 150 %>
	</div>
</div>
<div class="row admin-user-buttons" align="center">
	<% if current_user.admin? %>
		<%= link_to 'Edit user', edit_user_path(@user), class: "btn btn-sm btn-primary" %>
		<%= link_to 'Delete user', user_path(@user),
			method: :delete,
			data: { confirm: "Are you shure?" },
			class: "btn btn-sm btn-danger" %>
	<% end %>
</div>
<h4 align="center">
	<%= @user.username %>'s articles
</h4>
<div align="center">
	<%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', articles: @user_articles %>
<div align="center">
	<%= will_paginate @user_articles %>
</div>

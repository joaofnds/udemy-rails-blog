<div class="well col-xs-4 col-xs-offset-4 user-card">
	<li><%= link_to gravatar_for(user, size: 60), user_path(user) %></li>
	<li class="username"><%= link_to user.username, user_path(user) %></li>
	<li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
	<% if current_user.admin? %>
		<%= link_to 'Edit user', edit_user_path(user), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete user", user_path(user),
			method: :delete,
			class: "btn btn-danger btn-xs",
			data: { confirm: "Are you sure you want to delete this user and all it's articles?" }
		%>

	<% end %>
</div>
